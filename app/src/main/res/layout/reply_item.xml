<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
    android:layout_margin="16dp"
    android:background="#8BFBFBFB"
    android:orientation="vertical"
    android:theme="@style/Theme.Material3.Light.NoActionBar"
    android:id="@+id/reply_detail_layout">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/profile"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/person" />

        <TextView
            android:id="@+id/cmt_userid_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/applesdgothicneosb"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:textStyle="bold"
            android:textSize="16dp"
            android:layout_marginBottom="4dp"
            android:text="userid" />

        <TextView
            android:id="@+id/cmt_date_tv"
            android:gravity="right"
            android:fontFamily="@font/applegothicneor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:layout_weight="1"
            android:text="date" />

    </LinearLayout>

    <TextView
        android:id="@+id/cmt_content_tv"
        android:layout_width="match_parent"
        android:textColor="#333333"
        android:layout_marginTop="10dp"
        android:textSize="16dp"
        android:layout_marginLeft="8dp"
        android:fontFamily="@font/applegothicneor"
        android:layout_height="wrap_content"
        android:text="content" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:orientation="horizontal">
        <Button
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:id="@+id/reply_edit"
            android:textSize="12dp"
            android:backgroundTint="#E893BF"
            android:fontFamily="@font/applegothicneor"
            android:visibility="invisible"
            android:text="수정" />
        <Button
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:textSize="12dp"
            android:id="@+id/reply_delete"
            android:backgroundTint="#E893BF"
            android:visibility="invisible"
            android:fontFamily="@font/applegothicneor"
            android:text="삭제" />
    </LinearLayout>

</LinearLayout>